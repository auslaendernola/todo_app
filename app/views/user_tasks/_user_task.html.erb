<div class="well">
  <span class="task">
    <%= link_to user_task.description, user_task,
                remote: true, method: :delete,
                data: { confirm: "Are you sure?"} %>
  </span>
  <%= link_to fa_icon('pencil'), edit_user_task_path(user_task), remote: true %>
  <span class="pull-right">
    <%= user_task.due.try(:stamp('12 Feb 2017')) %>
  </span>
</div>
